{
  "rules": {
    "products": {
      ".read": "auth.token.whitelisted === true",
      ".write": false
    },
    "orders": {
      ".read": "auth.token.whitelisted === true",
      ".write": false
    },
    "metadata": {
      "$user_id": {
        ".read": "$user_id === auth.uid",
        ".write": false
      }
    },
    ".read": false,
    ".write": false
  }
}